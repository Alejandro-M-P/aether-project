---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="overflow-hidden">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
    </head>
    <body class="bg-bg-primary text-text-primary font-sans cursor-crosshair selection:bg-white/20 selection:text-white">
        <slot />
    </body>
</html>
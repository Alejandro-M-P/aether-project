---
import Layout from '../layouts/Layout.astro';
// Importamos los componentes individuales
import { UniverseCanvas, Transmitter, SearchBar } from '../components/Islands.jsx';
---

<Layout title="AETHER">

	<!-- ESTILOS CSS PURO PARA TODA LA PÁGINA (Asegura tu estética exacta) -->
	<style>
		/* Estilos base del body y header (idénticos a los tuyos) */
		body {
			background: #0a0a0a;
			color: #ffffff;
			overflow: hidden;
			margin: 0;
			padding: 0;
		}

		header {
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			z-index: 1000;
			padding: 1.5rem 2rem;
			display: flex;
			justify-content: space-between;
			align-items: center;
			backdrop-filter: blur(10px);
			background: rgba(10, 10, 10, 0.8);
			border-bottom: 1px solid rgba(255, 255, 255, 0.05);
			height: 80px; /* Altura fija para la posición absoluta */
		}

		.logo {
			font-size: 1.5rem;
			font-weight: 600;
			color: #fff;
			text-decoration: none;
			letter-spacing: -0.02em;
		}

		nav ul {
			display: flex;
			gap: 2rem;
			list-style: none;
		}

		nav a {
			color: rgba(255, 255, 255, 0.7);
			text-decoration: none;
			font-size: 0.9rem;
			transition: color 0.2s;
		}

		nav a:hover {
			color: #fff;
		}

		/* Posición absoluta para los metadatos y el título */
		.absolute-center {
			position: fixed;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
		}
	</style>


	<!-- 1. CAPA BASE: El Universo (Canvas) - Z-0 -->
	<UniverseCanvas client:load />

    <!-- 2. HEADER MINIMALISTA (Usando la etiqueta <header> con tu CSS) -->
    <header>
        <!-- Logo -->
        <a href="/" class="logo">Aether</a>
        <!-- Navegación -->
        <nav>
            <ul>
                <li><a href="#universe">Universe</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
    </header>


	<!-- 3. CAPA UI FLOTANTE: Contenido principal -->
	<!-- Usamos fixed inset-0 para que esta capa cubra 100% de la ventana sin conflicto -->
	<div class="fixed inset-0 z-10 pointer-events-none select-none">


        <!-- NUEVA BARRA DE CONTROL (BUSCADOR Y LANZADOR) -->
        <!-- Posición Fixed top: 96px (80px de header + 16px de margen) -->
        <div class="fixed top-96px left-1/2 transform -translate-x-1/2 z-50 pointer-events-auto w-full max-w-sm px-4">
            <!-- Contenedor con estética de cristal: Blur, fondo semi-transparente y borde. -->
            <div class="w-full flex items-center gap-3 backdrop-blur-sm bg-black/50 border border-white/5 rounded-xl p-2 md:p-3">

                <!-- Buscador (SearchBar) - Ocupa la mayor parte del espacio -->
                <div class=grow">
                    <SearchBar client:load />
                </div>

                <!-- Lanzador (Transmitter) - Se coloca a la derecha -->
                <div class="shrink-0">
                    <Transmitter client:load />
                </div>
            </div>
        </div>

		<!-- DATOS DEL SISTEMA (Metadatos) -->
		<!-- top: 96px + 64px de la barra de control = ~160px. Usamos top-[170px] -->
		<div class="absolute top-[170px] left-1/2 transform -translate-x-1/2 hidden md:block opacity-70 pointer-events-none z-30">
			<div class="flex gap-6 justify-center">

				<!-- Bloque 1: TTL y Estado -->
				<div class="border-r border-white/10 pr-6 space-y-1">
					<p class="text-[9px] font-mono text-zinc-500 tracking-widest uppercase">
						TTL: <span class="text-zinc-300">120s</span>
					</p>
					<p class="text-[9px] font-mono text-zinc-500 tracking-widest uppercase">
						Estado: <span class="text-emerald-500/80 animate-pulse">En Línea</span>
					</p>
				</div>

				<!-- Bloque 2: Conexión -->
				<div class="space-y-1">
					<p class="text-[9px] font-mono text-zinc-600 tracking-widest uppercase">
						FIREBASE AUTH
					</p>
					<p class="text-[9px] font-mono text-zinc-700 tracking-widest uppercase">
						CONEXIÓN SEGURA
					</p>
				</div>
			</div>
		</div>

		<!-- TÍTULO CENTRAL -->
		<div class="main-title-container absolute-center">
			<div class="flex flex-col items-center animate-in fade-in zoom-in duration-1000 ease-out">
				<h1 class="text-7xl md:text-9xl font-serif font-thin tracking-tighter text-transparent bg-clip-text bg-liniar-to-b from-white via-white/80 to-white/20 drop-shadow-[0_0_30px_rgba(255,255,255,0.15)]">
					AETHER
				</h1>

				<div class="h-px w-24 md:w-40 bg-liniar-to-r from-transparent via-white/20 to-transparent my-6 md:my-8"></div>

				<p class="text-[9px] md:text-[10px] tracking-[0.6em] md:tracking-[0.8em] uppercase text-zinc-500 font-light mix-blend-plus-lighter">
					El vacío escucha
				</p>
			</div>
		</div>

		<!-- Botón de Transmitir (Esquina inferior derecha, ya tiene posicionamiento en el div de la barra de control) -->

	</div>
</Layout>